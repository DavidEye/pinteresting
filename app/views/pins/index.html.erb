
<div class="panel panel-default">
  <p id="notice"><%= notice %></p>

  <div class="panel-heading">
    <h1>Listing Pins</h1>
  </div>
  <div class="panel-body">
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Description</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= image_tag pin.image.url(:medium) %></td>
            <td><%= pin.description %></td>
            <td><%= pin.user.email if pin.user %></td>
            <td><%= link_to 'Show', pin, class: "btn btn-primary btn-xs" %></td>
            <% if pin.user == current_user %>
              <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-warning btn-xs" %></td>
              <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <div class="panel-footer">
    <% if user_signed_in? %> 
      <%= link_to 'New Pin', new_pin_path %>
    <% end %>
  </div>
</div>
